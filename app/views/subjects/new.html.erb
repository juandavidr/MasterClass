<% provide(:title, 'Crear materia') %>

<div class="formoid-default-skyblue" style="background-color:#FFFFFF;font-size:14px;font-family:'Open Sans','Helvetica Neue','Helvetica',Arial,Verdana,sans-serif;color:#666666;max-width:480px;min-width:150px">
  <div class="title">
    <h1>Crear materia</h1>
  </div>
  <div class="span6 offset3" >
    <%= form_for(@subject) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :code %>
      <%= f.text_field :code %>
    
      <%= f.label :quota %>
      <%= f.number_field :quota%>

      <%= f.label :credits %>
      <%= f.text_area :credits%>

      <%= f.label :status %>
      <%=f.select(:status,options_for_select([["Activo", "Activo"], ["Inactivo", "Inactivo"]]))%>   

      <%= f.label :programs %>
      <%= select_tag "programs", options_from_collection_for_select(Program.all, 'id', 'name'), :multiple => true %>

      <%= f.label :teacher %>
        <%= collection_select(:teacher_subject, :user_id, User.where(usertype: "Profesor"), :id, :firstname) %>

      <div class="submit">
        <%= f.submit "Agregar materia", class: "btn " %>
        </div>
      <% end %>
    </div>
  </div>